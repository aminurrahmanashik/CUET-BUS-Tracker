<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/driver5"
    tools:context=".User_Signup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <EditText
            android:id="@+id/userid2"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edittext_round"
            android:drawableLeft="@drawable/user"
            android:fontFamily="@font/lobster_regular"
            android:hint="Enter Email"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#050505"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passid2"
            android:fontFamily="@font/lobster_regular"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edittext_round"
            android:drawableLeft="@drawable/pass"
            android:hint="Password"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#050505"
            android:textSize="20sp"
            android:textStyle="bold"  />

        <EditText
            android:id="@+id/re_type_passid"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lobster_regular"
            android:background="@drawable/edittext_round"
            android:drawableLeft="@drawable/pass"
            android:hint=" Retype Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#050505"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signupid"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/lobster_regular"
            android:background="@drawable/custom_button"
            android:text="Sign Up"
            android:textColor="@color/cuet_bus"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signup_text_View_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Are You Already Registered ? Sin In"
            android:fontFamily="@font/lobster_regular"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:gravity="center"
            />
        <ProgressBar
            android:id="@+id/progressupid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>